generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Order {
  id               String   @id @default(cuid())
  order_id         String   @unique
  created_at       DateTime @default(now())
  name             String
  email            String
  phone            String
  country          String
  city             String
  address          String
  postal_code      String
  notes            String?
  price_usd        Float    @default(799)
  status           String   @default("initiated") // initiated, paid, cancelled, refunded
  payment_method   String?  // paypal, paypal_card
  paypal_order_id  String?
  payer_email      String?
  ip               String?
  user_agent       String?
}